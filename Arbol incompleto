Arboles 

#include<stdio.h>

int main()
{

	int a=100; 
    printf ("Pon un numerito:");
    scanf ("%d",&a);

    while(a<100)
                { 
		printf (
        "\t\t        *\n"
        "\t\t       ...\n"
		"\t\t     ......\n"
		"\t\t    ........\n"
		);
        ++a;
        break;
                }
    while( a<100){
    
                 
		printf (
       
        "\t\t    ........\n"
        "\t\t     ......\n"
        "\t\t       ...\n"
        "\t\t        *\n");
        --a;
   		break;
   	}
		
		}
